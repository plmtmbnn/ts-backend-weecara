{
    "env": {
        "es2020": true,
        "node": true
    },
    "extends": [
        "standard"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 11
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "no-useless-constructor": "off",
        "camelcase": "off",
        "semi-style": ["error", "last"],
        "semi": ["error", "always"],
        "no-unused-vars": "warn"
    }
}
